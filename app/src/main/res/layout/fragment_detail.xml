<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.tokopedia.devicetracker.ui.main.fragment.DeviceDetailFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20sp">

            <RelativeLayout
                android:layout_width="300sp"
                android:layout_height="300sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/white">

                <me.dm7.barcodescanner.zxing.ZXingScannerView
                    android:id="@+id/zxing_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white" />
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:animateLayoutChanges="true">

            <RelativeLayout
                android:id="@+id/layout_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center">

                <EditText
                    android:id="@+id/et_employee_name_1"
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="none"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_borrow"
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_employee_name_1"
                    android:text="PINJAM"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_employee_name_2"
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="none"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_desc_borrow_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_employee_name_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20sp"
                    android:gravity="center"
                    android:textColor="@color/primary_text"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_desc_borrow_data"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20sp"
                    android:background="@color/primary_dark"
                    android:text="BALIKIN"
                    android:textColor="@color/white"
                    android:textSize="30sp" />
            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/white">

        <ProgressBar
            android:layout_width="@dimen/abc_action_bar_default_height_material"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>
</FrameLayout>
