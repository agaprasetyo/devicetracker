
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context="com.tokopedia.devicetracker.ui.main.fragment.DeviceDetailFragment">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="UselessParent">


    <RelativeLayout
        android:layout_width="300sp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/white">

        <me.dm7.barcodescanner.zxing.ZXingScannerView
            android:id="@+id/zxing_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center">

            <EditText
                android:id="@+id/et_employee_name_1"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="none"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_borrow"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_employee_name_1"
                android:text="PINJAM"
                android:textSize="30sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center">

            <EditText
                android:id="@+id/et_employee_name_2"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="none"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_employee_name_2"
                android:text="KEMBALIKAN"
                android:textSize="30sp"
                android:textStyle="bold" />
        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>
</FrameLayout>
