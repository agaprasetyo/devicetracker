<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.tokopedia.devicetracker.ui.main.activity.MainActivity">

    <fragment
        android:id="@+id/container"
        android:name="com.tokopedia.devicetracker.ui.main.fragment.DeviceListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        tools:layout="@layout/fragment_device_list" />

    <fragment
        android:id="@+id/container_detail"
        android:name="com.tokopedia.devicetracker.ui.main.fragment.DeviceDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        tools:layout="@layout/fragment_empty_device" />

</LinearLayout>
