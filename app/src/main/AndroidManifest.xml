<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.devicetracker">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name=".app.MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.main.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.activity.DeviceDetailActivity"
            android:label="@string/title_activity_device_detail" />
        <activity
            android:name=".ui.administration.activity.MainAdminActivity"
            android:label="@string/title_activity_main_admin" />
        <activity
            android:name=".ui.administration.activity.FormDeviceActivity"
            android:label="@string/title_activity_form_device"
            android:parentActivityName=".ui.administration.activity.MainAdminActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tokopedia.devicetracker.ui.administration.activity.MainAdminActivity" />
        </activity>
        <activity
            android:name=".ui.administration.activity.TrackingLogDeviceActivity"
            android:label="@string/title_activity_tracking_log_device"
            android:parentActivityName=".ui.administration.activity.MainAdminActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tokopedia.devicetracker.ui.administration.activity.MainAdminActivity" />
        </activity>
    </application>

</manifest>
